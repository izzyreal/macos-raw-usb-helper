<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Unique identifier for the helper tool -->
    <key>CFBundleIdentifier</key>
    <string>com.example.HelperTool</string>

    <!-- Version information -->
    <key>CFBundleShortVersionString</key>
    <string>1.0</string>
    <key>CFBundleVersion</key>
    <string>1</string>

    <!-- Specification for launchd -->
    <key>KeepAlive</key>
    <true/>

    <!-- Path to the helper tool's executable -->
    <key>Program</key>
    <string>../Library/LaunchServices/macos-raw-usb-helper</string>
</dict>
</plist>
